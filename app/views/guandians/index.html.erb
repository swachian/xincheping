<h1 class="page-header">观点列表</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>
        <th>作者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @guandians.each do |gd| %>
         <tr>
           <td><%=gd.id%></td>
           <td><%=link_to gd.title, gd.link, target: "_blank"%></td>
           <td><%=gd.editor.name%></td>
           <td><%=gd.c_at.to_s[0..9]%></td>
         </tr>
      <% end %>

    </tbody>
  </table>
</div>
