<h1 class="page-header">长测列表</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>
        <th>作者</th>
        <th>发表时间</th>
        <th>车型</th>
      </tr>
    </thead>
    <tbody>
      <% @changces.each do |cc| %>
         <tr>
           <td><%=cc.id%></td>
           <td><%=link_to cc.title, cc.link, target: "_blank"%></td>
           <td><%=cc.editor.name%></td>
           <td><%=cc.c_at.to_s[0..9]%></td>
           <td><%=cc.chexin%></td>
         </tr>
      <% end %>

    </tbody>
  </table>
</div>
